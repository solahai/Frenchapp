{
  "expo": {
    "name": "Café French",
    "slug": "cafe-french",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "cafe-french",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E88E5"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cafefrench.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Café French needs access to your microphone for pronunciation practice and conversation features.",
        "NSSpeechRecognitionUsageDescription": "Café French uses speech recognition to help you practice speaking French."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E88E5"
      },
      "package": "com.cafefrench.app",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Café French needs access to your microphone for pronunciation practice."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
